<p id="notice"><%= notice %></p>

<h1>Saju Answers</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Next bot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saju_answers.each do |saju_answer| %>
      <tr>
        <td><%= saju_answer.content %></td>
        <td><%= saju_answer.next_bot_id %></td>
        <td><%= link_to 'Show', saju_answer %></td>
        <td><%= link_to 'Edit', edit_saju_answer_path(saju_answer) %></td>
        <td><%= link_to 'Destroy', saju_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

